  <FeatureSection 
    title="Características de ContaSoft"
    description="Este sistema cuenta con los siguientes módulos que te describimos a continuación:"
  />

  <ModuleArticle
    imageSrc="/assets/img/register.jpeg"
    altText="Imagen del módulo de Presupuesto y Flujo de Efectivo"
    title="Módulo de Presupuesto y Flujo de Efectivo"
    items={[
      "Importación de transacciones financieras.",
      "Registro manual de transacciones.",
      "Proporciona información actualizada sobre el estado financiero.",
      "Categorización automática de ingresos y egresos.",
      "Visualización del presupuesto actual."
    ]}
    reverse
  />

  <ModuleArticle
    imageSrc="/assets/img/report.jpeg"
    altText="Imagen del módulo de Reportes"
    title="Módulo de Reportes"
    items={[
      "Generación de reportes mensuales, anuales y por periodo académico.",
      "Informes detallados de desempeño financiero.",
      "Análisis de tendencias a lo largo del tiempo.",
      "Comparación de resultados con períodos anteriores.",
      "Exportación de informes en formatos PDF y Excel."
    ]}
  />

  <ModuleArticle
    imageSrc="/assets/img/inventory.jpeg"
    altText="Imagen del módulo de Inventario"
    title="Módulo de Inventario"
